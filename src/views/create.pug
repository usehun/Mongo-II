extends templates/layout

block content
  h1=pageTitle
  form(method="post")
    input(type="text", name="title", placeholder="Title", required, minlength="3")
    input(type="number", name="year", placeholder="Year", required, )
    input(type="float", name="rating", placeholder="Rating", required, )
    textarea(name="summary", placeholder="Synopsis", required, )
    input(type="text", name="genres", placeholder="Genres", required, )
    input(type="submit", value="Submit")